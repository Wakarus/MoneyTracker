<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_layout_height"
    android:background="@mipmap/drawe_patt"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_status_bar_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/header_imeagesize"
        android:layout_height="@dimen/header_imeagesize"
        android:layout_marginStart="@dimen/profile_margin"
        android:layout_marginLeft="@dimen/profile_margin"
        android:layout_marginTop="@dimen/profile_margin"
        android:src="@drawable/profile"
        app:civ_border_width="@dimen/header_image_border"
        app:civ_border_color="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="@dimen/nameTextSize"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/user_name_margin_top"
        android:layout_marginLeft="@dimen/profile_margin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/nameTextSize"

        android:textColor="@color/white"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/user_email_margin_top"
        android:layout_marginLeft="@dimen/profile_margin"
       />
</RelativeLayout>